<h1>Listing employees</h1>
<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Phone</th>
          <th>Job type</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @employees.each do |employee| %>
          <tr>
            <td><%= employee.name %></td>
            <td><%= employee.phone %></td>
            <td><%= employee.job_type %></td>
            <td><%= link_to 'Show', employee, class: 'btn btn-mini' %></td>
            <td><%= link_to 'Edit', edit_employee_path(employee), class: 'btn btn-mini btn-success' %></td>
            <td><%= link_to 'Destroy', employee, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>

<%= link_to 'New Employee', new_employee_path %>
